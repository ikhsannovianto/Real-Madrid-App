<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Warna saat item dipilih -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/> <!-- Warna normal -->
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/> <!-- Sudut membulat hanya di atas -->
        </shape>
    </item>
</selector>
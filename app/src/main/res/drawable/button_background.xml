<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/> <!-- Warna biru gelap saat ditekan -->
            <corners android:radius="16dp"/> <!-- Sudut membulat -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Warna biru normal -->
            <corners android:radius="16dp"/> <!-- Sudut membulat -->
        </shape>
    </item>
</selector>
